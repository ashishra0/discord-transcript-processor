# Discord bot token (from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=

# Anthropic API key
ANTHROPIC_API_KEY=

# Channel ID where the transcript bot posts (right-click channel → Copy Channel ID)
WATCH_CHANNEL_ID=

# (Optional) Output channel ID. If not set, replies go to the same channel.
OUTPUT_CHANNEL_ID=

# (Optional) Only process messages from this bot/user ID.
# Right-click the transcript bot → Copy User ID
TRANSCRIPT_BOT_ID=

# (Optional) Claude model to use (default: claude-sonnet-4-5-20250929)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# (Optional) Max tokens for Claude response (default: 4096)
MAX_TOKENS=4096
